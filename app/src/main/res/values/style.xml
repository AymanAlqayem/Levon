<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base App Theme -->
    <style name="AymanTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Global attributes -->
        <item name="android:background">#1A1A1D</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:editTextStyle">@style/CustomEditText</item>
        <item name="android:textViewStyle">@style/CustomTextView</item>
        <item name="android:listViewStyle">@style/CustomListView</item>
        <item name="buttonStyle">@style/CreativeButton</item>
        <item name="spinnerStyle">@style/CustomSpinner</item>
        <item name="checkboxStyle">@style/CustomCheckBox</item>
        <item name="radioButtonStyle">@style/CustomRadioButton</item>

        <!-- Spinner popup dropdown theme -->
        <item name="android:popupTheme">@style/SpinnerPopupDark</item>
    </style>

    <!-- Spinner Popup Dropdown Theme -->
    <style name="SpinnerPopupDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:popupBackground">#1A1A1D</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Custom EditText -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#FFFFFF</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Custom TextView -->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <!-- Custom ListView -->
    <style name="CustomListView" parent="Widget.AppCompat.ListView">
        <item name="android:divider">#FFFFFF</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:background">#1A1A1D</item>
        <item name="android:listSelector">?android:attr/activatedBackgroundIndicator</item>
    </style>

    <!-- Custom Button -->
    <style name="CreativeButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">9dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Custom Spinner -->
    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:popupBackground">#1A1A1D</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">#FFFFFF</item> <!-- Only affects selected item -->
        <item name="android:fontFamily">serif</item>
    </style>


    <!-- Custom CheckBox -->
    <style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:buttonTint">#FFFFFF</item>
    </style>

    <!-- Custom RadioButton -->
    <style name="CustomRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:buttonTint">#FFFFFF</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
    </style>

</resources>
